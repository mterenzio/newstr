  <body>
   <table role="presentation" cellpadding="5" cellspacing="5" align="center" style="margin:auto;width:640px;border-collapse:collapse;border:0;border-spacing:0;background:#efefef;">
    <tr>
        <td colspan="3" height="5" style="height: 5px; line-height: 1px">&nbsp;</td>
    </tr>
    <tr>
        <td width="5" style="width: 5px; line-height: 1px">&nbsp;</td>
        <td align="left"><a href="https://newstr.news"><img src="<%= image_path("logo.png") %>" width="150px" alt="Newstr logo" /></a></td>
        <td align="right">News Digest<br /> <%= Date.today.to_s %></td>
        <td width="5" style="width: 5px; line-height: 1px">&nbsp;</td>
    </tr>
    <tr>
        <td colspan="3" height="5" style="height: 5px; line-height: 1px">&nbsp;</td>
    </tr>
   </table>
  </body>
  <%= yield %>
  <table role="presentation" cellpadding="5" cellspacing="5" align="center" style="margin:auto;width:640px;border-collapse:collapse;border:0;border-spacing:0;background:#efefef;">
  <tr>
      <td colspan="3" height="5" style="height: 5px; line-height: 1px">&nbsp;</td>
  </tr>
  <tr>
      <td width="5" style="width: 5px; line-height: 1px">&nbsp;</td>
      <td align="left"><% if @unsubscribe_token %>Don't like these emails? <a href="https://newstr.news/settings/unsubscribe/<%= @unsubscribe_token %>"><unsubscribe>Unsubscribe</unsubscribe></a>.<% end %></td>
      <td align="middle"><a href="<%= @page_url %>">View latest in Browser</a></td>
      <td align="right"><a href="<%= @feed_url %>">RSS</a></td>
      <td width="5" style="width: 5px; line-height: 1px">&nbsp;</td>
  </tr>
  </table>
