
        <!-- Masthead-->
        <header class="masthead">
            <div class="container position-relative">
                <div class="row justify-content-center">
                    <div class="col-xl-6">
                        <div class="text-center text-white">
                            <!-- Page heading-->
                            <h1 class="mb-5">Get news from your Nostr contacts delivered daily to your inbox.</h1>
                    </div>
                </div>
            </div>
        </header>
        <%= render "features" %>
        <!-- Call to Action-->
        <section class="call-to-action text-white text-center" id="signup">
            <div class="container position-relative">
                <div class="row justify-content-center">
                    <div class="col-xl-6">
                      <% if logged_in? %>
                        <h2 class="mb-4">Our servers are gathering news from your network and your personal news digest is on the way!</h2>
                      <% else %>
                        <h2 class="mb-4">Ready to get started? Sign in now!</h2>
                        <a class="btn btn-primary" href="/login">Sign In</a>
                      <% end %>
                    </div>
                </div>
            </div>
        </section>